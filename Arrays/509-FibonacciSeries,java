class Solution {
    public int fib(int n) {

        // Base case: if n is 0, Fibonacci value is 0
        if (n == 0) return 0;

        // Base case: if n is 1, Fibonacci value is 1
        if (n == 1) return 1;

        // Initialize first two Fibonacci numbers
        int a = 0; // fib(0)
        int b = 1; // fib(1)

        // Loop from 2 to n to calculate Fibonacci numbers iteratively
        for (int i = 2; i <= n; i++) {

            // Calculate next Fibonacci number
            int c = a + b;

            // Move variables forward
            a = b;
            b = c;
        }

        // b now contains fib(n), so return it
        return b;
    }
}
